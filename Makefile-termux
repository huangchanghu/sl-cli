BINARY_NAME=sl-cli
ROOT_PATH=/data/data/com.termux/files
INSTALL_PATH="/data/data/com.termux/files/usr/bin"
MAN_PATH="/data/data/com.termux/files/usr/share/man/man1"

# æ¢æµ‹å½“å‰ Shell ç±»å‹ (zsh æˆ– bash)
# å¦‚æœæ¢æµ‹å¤±è´¥ï¼Œé»˜è®¤ fallback åˆ° zsh (Mac é»˜è®¤)
SHELL_TYPE := $(shell basename $$SHELL)

.PHONY: all build clean install install-completion install-man gen-man

all: build

build:
	@echo "Building $(BINARY_NAME)..."
	go build -o $(BINARY_NAME) cmd/sl-cli/main.go

clean:
	@echo "Cleaning..."
	go clean
	rm -f $(BINARY_NAME)
	rm -rf ./man1

# [æ–°å¢] ç”Ÿæˆ Man pages çš„ç›®æ ‡
gen-man: build
	@echo "Generating man pages..."
	@mkdir -p man1
	@./$(BINARY_NAME) gen-man ./man1

# install ä¾èµ– buildï¼Œå®‰è£…äºŒè¿›åˆ¶æ–‡ä»¶åï¼Œå°è¯•å®‰è£…è¡¥å…¨
install: build
	@echo "Installing binary to $(INSTALL_PATH)..."
	@mv $(BINARY_NAME) $(INSTALL_PATH)/$(BINARY_NAME)
	@echo "Binary installed."
	@$(MAKE) install-completion

# å®‰è£… Man pages
install-man: gen-man
	@echo "Installing man pages to $(MAN_PATH)..."
	@mkdir -p $(MAN_PATH)
	@# å®‰è£…æ‰€æœ‰ç”Ÿæˆçš„ .1 æ–‡ä»¶
	@cp man1/*.1 $(MAN_PATH)/
	@echo "âœ… Man pages installed."

install-completion:
	@echo "Detecting shell: $(SHELL_TYPE)"
ifeq ($(SHELL_TYPE),zsh)
	@echo "Installing Zsh completion..."
	@# åˆ›å»ºæ ‡å‡†çš„ Zsh site-functions ç›®å½• (å¦‚æœä¸å­˜åœ¨)
	@mkdir -p /data/data/com.termux/files/usr/share/zsh/site-functions
	@# ç”Ÿæˆè¡¥å…¨è„šæœ¬å¹¶å†™å…¥æ–‡ä»¶ï¼Œæ–‡ä»¶åä¸º _sl-cli (Zsh è§„èŒƒ)
	@$(INSTALL_PATH)/$(BINARY_NAME) completion zsh | tee /data/data/com.termux/files/usr/share/zsh/site-functions/_$(BINARY_NAME) > /dev/null
	@echo "âœ… Zsh completion installed to /data/data/com.termux/files/usr/share/zsh/site-functions/_$(BINARY_NAME)"
	@echo "ğŸ‘‰ You may need to run 'rm -f ~/.zcompdump; compinit' to reload."
else ifeq ($(SHELL_TYPE),bash)
	@echo "Installing Bash completion..."
	@# åˆ›å»º Bash è¡¥å…¨ç›®å½• (å…¼å®¹ Homebrew å’Œ Linux)
	@mkdir -p /data/data/com.termux/files/usr/etc/bash_completion.d
	@$(INSTALL_PATH)/$(BINARY_NAME) completion bash | tee /data/data/com.termux/files/usr/etc/bash_completion.d/$(BINARY_NAME) > /dev/null
	@echo "âœ… Bash completion installed to /usr/etc/bash_completion.d/$(BINARY_NAME)"
	@echo "ğŸ‘‰ Ensure you have bash-completion installed and sourced."
else
	@echo "âš ï¸  Shell '$(SHELL_TYPE)' not fully supported for auto-install."
	@echo "Please run '$(BINARY_NAME) completion --help' to install manually."
endif

uninstall:
	@echo "Uninstalling $(BINARY_NAME)..."
	@# 1. åˆ é™¤äºŒè¿›åˆ¶æ–‡ä»¶
	@rm -f $(INSTALL_PATH)/$(BINARY_NAME)
	@echo "  - Removed binary"
	
	@# 2. åˆ é™¤ Zsh è¡¥å…¨è„šæœ¬
	@rm -f /data/data/com.termux/files/usr/share/zsh/site-functions/_$(BINARY_NAME)
	@echo "  - Removed Zsh completion"
	
	@# 3. åˆ é™¤ Bash è¡¥å…¨è„šæœ¬
	@rm -f /data/data/com.termux/files/usr/etc/bash_completion.d/$(BINARY_NAME)
	@echo "  - Removed Bash completion"
	
	@# 4. åˆ é™¤ Man pages (åˆ é™¤ sl-cli.1 ä»¥åŠ sl-cli-xxx.1 æ‰€æœ‰å­å‘½ä»¤æ–‡æ¡£)
	@rm -f $(MAN_PATH)/$(BINARY_NAME)*.1
	@echo "  - Removed Man pages"
	
	@echo "âœ… Uninstallation complete."
